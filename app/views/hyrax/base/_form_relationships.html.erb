<!-- Overriding partial in hyrax gem in order to auto-select an admin set -->
<% if Flipflop.assign_admin_set? %>
  <% if current_user.admin? %>
  <%= f.input :admin_set_id, as: :select,
              selected: AdminSetSelectService.select(f.object.model.class.to_s, Hyrax::AdminSetOptionsPresenter.new(Hyrax::AdminSetService.new(controller)).select_options),
              include_blank: true,
              collection: Hyrax::AdminSetOptionsPresenter.new(Hyrax::AdminSetService.new(controller)).select_options,
              input_html: { class: 'form-control' } %>
    <% else %>
    <%= f.input :admin_set_id, as: :hidden,
                input_html: { class: 'form-control',
                              value: AdminSetSelectService.select(f.object.model.class.to_s, Hyrax::AdminSetOptionsPresenter.new(Hyrax::AdminSetService.new(controller)).select_options)[1] },
                readonly: true %>
    <% end%>
<% end %>

<%= render 'form_in_works', f: f %>
<%= render 'form_member_of_collections', f: f %>

<% if f.object.persisted? %>
  <h3><%= t("hyrax.works.form.in_this_work") %></h3>
  <%= render 'form_child_work_relationships', f: f  %>
<% end %>