        <div class="base-terms">
          <% f.object.primary_terms.each do |term| %>
            <%= render_edit_field_partial(term, f: f) %>
          <% end %>
        </div>
        <% if f.object.display_additional_fields? %>
          <%= link_to t('hyrax.works.form.additional_fields'),
                      '#extended-terms',
                      class: 'btn btn-default additional-fields',
                      data: { toggle: 'collapse' },
                      role: "button",
                      'aria-expanded'=> "false",
                      'aria-controls'=> "extended-terms" %>
          <div id="extended-terms" class='collapse'>
            <%= render 'form_media', f: f %>
            <% f.object.secondary_terms.each do |term| %>
              <%= render_edit_field_partial(term, f: f) %>
            <% end %>
          </div>
        <% end %>
        <div class="suppressed-terms hidden">
          <% f.object.suppressed_terms.each do |term| %>
            <%= term %>|<%= f.object.suppressed_values[term].to_s %>|<%= f.object.suppressed_values.to_s %>
            <% if f.object.multiple? term %>
              <%= f.input term, as: :multi_value, selected: f.object.suppressed_values[term], collection: f.object.suppressed_values[term] %>
            <% else %>
                <%= f.input term, as: :text, disabled: true, input_html: { value: f.object.suppressed_values[term].first } %>
            <% end %>
          <% end %>
        </div>
