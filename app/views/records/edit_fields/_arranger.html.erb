<hr>
<div id="arranger">
  <%= f.fields_for :arrangers do |arranger| %>
    <div class="arranger row">
      <div class="col-sm-6 arranger-name">
        <%= arranger.input :name, label: "Arranger",
                          input_html: { placeholder: 'Last Name, First Name',
                                        class: 'form-control arranger arranger-name',
                                        value: (arranger.object.name.first || '') } %>
      </div>

      <div class="col-sm-6 arranger-orcid">
        <%= arranger.input :orcid, label: 'ORCID', input_html: { placeholder: 'https://orcid.org/xxxx-xxxx-xxxx-xxxx',
                                                                class: 'form-control',
                                                                value: (arranger.object.orcid.first || '') } %>
      </div>

      <div class="col-sm-6 arranger-affiliation">
        <%= arranger.input :affiliation, as: :select,
                          collection: DepartmentsService.select_all_options.sort,
                          include_blank: true,
                          selected: arranger.object.affiliation.first,
                          item_helper: DepartmentsService.method(:include_current_value),
                          input_html: { class: 'form-control' }
        -%>
      </div>

      <div class="col-sm-6 arranger-other-affiliation">
        <%= arranger.input :other_affiliation, input_html: { class: 'form-control',
                                                            value: (arranger.object.other_affiliation.first || '') } %>
      </div>

      <% if @form.arrangers.count > 1 %>
      <span class="input-group-btn field-controls multi_value">
        <button type="button" class="btn btn-link remove remove-arranger" data-index="<%= arranger.index %>">
          <span class="glyphicon glyphicon-remove"></span> <span class="controls-remove-text">Remove Arranger</span>
        </button>
      </span>
      <% end %>
    </div>
  <% end %>

  <input type='hidden' name='index-arranger' id='index-arranger' value="<%= @form.arrangers.count %>" />

  <div class="arranger row cloning hidden" id='arranger-cloning_row'>
    <%= f.fields_for :arrangers do |arranger| %>
      <% if arranger.index <= @form.arrangers.count %>
        <div class="arranger row">
          <div class="col-sm-6 arranger-name">
            <%= arranger.input :name, label: "Arranger",
                              input_html: { placeholder: 'Last Name, First Name',
                                            class: 'form-control arranger arranger-name',
                                            value: '' } %>
          </div>

          <div class="col-sm-6 arranger-orcid">
            <%= arranger.input :orcid, label: 'ORCID', input_html: { placeholder: 'https://orcid.org/xxxx-xxxx-xxxx-xxxx',
                                                                    class: 'form-control',
                                                                    value: '' } %>
          </div>

          <div class="col-sm-6 arranger-affiliation">
            <%= arranger.input :affiliation, as: :select,
                              collection: DepartmentsService.select_all_options.sort,
                              include_blank: true,
                              selected: '',
                              item_helper: DepartmentsService.method(:include_current_value),
                              input_html: { class: 'form-control' }
            -%>
          </div>

          <div class="col-sm-6 arranger-other-affiliation">
            <%= arranger.input :other_affiliation, input_html: { class: 'form-control',
                                                                value: '' } %>
          </div>

          <span class="input-group-btn field-controls multi_value">
          <button type="button" class="btn btn-link remove remove-arranger" data-index="1">
            <span class="glyphicon glyphicon-remove"></span> <span class="controls-remove-text">Remove Arranger</span>
          </button>
        </span>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
<div class="row">
  <button id="add-another-arranger" class="btn btn-link add">
    <span class="glyphicon glyphicon-plus"></span>
    <span>Add another Arranger</span>
  </button>
</div>
<hr>
