<% if f.object.resource_type[0].blank? && params[:controller] == 'hyrax/articles' %>
  <% value = 'Article' %>
<% elsif f.object.resource_type[0].blank? && params[:controller] == 'hyrax/artworks' %>
  <% value = 'Art' %>
<% elsif f.object.resource_type[0].blank? && params[:controller] == 'hyrax/data_sets' %>
  <% value = 'Dataset' %>
<% elsif f.object.resource_type[0].blank? && params[:controller] == 'hyrax/honors_theses' %>
  <% value = 'Honors Thesis' %>
<% elsif f.object.resource_type[0].blank? && params[:controller] == 'hyrax/masters_papers' %>
  <% value = 'Masters Paper' %>
<% else %>
  <% value = '' %>
<% end %>

<%= f.input :resource_type, as: :select,
            collection: Hyrax::ResourceTypesService.select_options,
            selected: value,
            input_html: { class: 'form-control', multiple: true, size: 6 } %>