<%# app/views/records/edit_fields/_degree.html.erb %>
<%
  case params[:controller]
  when 'hyrax/honors_theses'
    work_type = 'honors'
  when 'hyrax/masters_papers'
    work_type = 'masters'
  when 'hyrax/dissertations'
    work_type = 'dissertation'
  else
    work_type = 'all'
  end
%>

<%= f.input :degree, as: :select,
            collection: DegreesService.select_active_options(work_type),
            include_blank: true,
            item_helper: DegreesService.method(:include_current_value),
            label: 'Degree',
            input_html: { class: 'form-control' }
%>
