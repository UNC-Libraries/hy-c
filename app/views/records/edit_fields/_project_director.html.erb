<hr>
<div id="project_director">
  <%= f.fields_for :project_directors do |project_director| %>
    <div class="project_director row">
      <div class="col-sm-6 project_director-name">
        <%= project_director.input :name, label: "Project Director",
                          input_html: { placeholder: 'Smith, John',
                                        class: 'form-control project_director project_director-name',
                                        value: (project_director.object.name.first || '') } %>
      </div>

      <div class="col-sm-6 project_director-orcid">
        <%= project_director.input :orcid, label: 'ORCID', input_html: { placeholder: 'https://orcid.org/xxxx-xxxx-xxxx-xxxx',
                                                                class: 'form-control',
                                                                value: (project_director.object.orcid.first || '') } %>
      </div>

      <div class="col-sm-6 project_director-affiliation">
        <%= project_director.input :affiliation, as: :select,
                          collection: DepartmentsService.select_all_options.sort,
                          include_blank: true,
                          selected: project_director.object.affiliation.first,
                          item_helper: DepartmentsService.method(:include_current_value),
                          input_html: { class: 'form-control' }
        -%>
      </div>

      <div class="col-sm-6 project_director-other-affiliation">
        <%= project_director.input :other_affiliation, input_html: { class: 'form-control',
                                                            value: (project_director.object.other_affiliation.first || '') } %>
      </div>

      <% if @form.project_directors.count > 1 %>
      <span class="input-group-btn field-controls multi_value">
        <button type="button" class="btn btn-link remove remove-project_director" data-index="<%= project_director.index %>">
          <span class="glyphicon glyphicon-remove"></span> <span class="controls-remove-text">Remove Project Director</span>
        </button>
      </span>
      <% end %>
    </div>
  <% end %>

  <input type='hidden' name='index-project_director' id='index-project_director' value="<%= @form.project_directors.count %>" />

  <div class="project_director row cloning hidden" id='project_director-cloning_row'>
    <%= f.fields_for :project_directors do |project_director| %>
      <% if project_director.index <= @form.project_directors.count %>
        <div class="project_director row">
          <div class="col-sm-6 project_director-name">
            <%= project_director.input :name, label: "Project Director",
                              input_html: { placeholder: 'Smith, John',
                                            class: 'form-control project_director project_director-name',
                                            value: '' } %>
          </div>

          <div class="col-sm-6 project_director-orcid">
            <%= project_director.input :orcid, label: 'ORCID', input_html: { placeholder: 'https://orcid.org/xxxx-xxxx-xxxx-xxxx',
                                                                    class: 'form-control',
                                                                    value: '' } %>
          </div>

          <div class="col-sm-6 project_director-affiliation">
            <%= project_director.input :affiliation, as: :select,
                              collection: DepartmentsService.select_all_options.sort,
                              include_blank: true,
                              selected: '',
                              item_helper: DepartmentsService.method(:include_current_value),
                              input_html: { class: 'form-control' }
            -%>
          </div>

          <div class="col-sm-6 project_director-other-affiliation">
            <%= project_director.input :other_affiliation, input_html: { class: 'form-control',
                                                                value: '' } %>
          </div>

          <span class="input-group-btn field-controls multi_value">
          <button type="button" class="btn btn-link remove remove-project_director" data-index="1">
            <span class="glyphicon glyphicon-remove"></span> <span class="controls-remove-text">Remove Project Director</span>
          </button>
        </span>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
<div class="row">
  <button id="add-another-project_director" class="btn btn-link add">
    <span class="glyphicon glyphicon-plus"></span>
    <span>Add another Project Director</span>
  </button>
</div>
<hr>
