<% date_value = params[:action] == 'new' ? Date.today.strftime("%Y-%m-%d") : Hyc::EdtfConvert.convert_from_edtf(f.object.date_created) %>

<% if f.object.multiple? key %>
  <%= f.input :date_created, as: :multi_value, placeholder: "Date Format YYYY-MM-DD",
              input_html: { value: date_value } %>
<% else %>
  <%= f.input :date_created, placeholder: "Date Format YYYY-MM-DD",
              input_html: { value: date_value } %>
<% end %>
