<hr>
<div id="composer">
  <%= f.fields_for :composers do |composer| %>
    <div class="composer row">
      <div class="col-sm-6 composer-name">
        <%= composer.input :name, label: "Composer",
                          input_html: { placeholder: 'Last Name, First Name',
                                        class: 'form-control composer composer-name',
                                        value: (composer.object.name.first || '') } %>
      </div>

      <div class="col-sm-6 composer-orcid">
        <%= composer.input :orcid, label: 'ORCID', input_html: { placeholder: 'https://orcid.org/xxxx-xxxx-xxxx-xxxx',
                                                                class: 'form-control',
                                                                value: (composer.object.orcid.first || '') } %>
      </div>

      <div class="col-sm-6 composer-affiliation">
        <%= composer.input :affiliation, as: :select,
                          collection: DepartmentsService.select_all_options.sort,
                          include_blank: true,
                          selected: composer.object.affiliation.first,
                          item_helper: DepartmentsService.method(:include_current_value),
                          input_html: { class: 'form-control' }
        -%>
      </div>

      <div class="col-sm-6 composer-other-affiliation">
        <%= composer.input :other_affiliation, input_html: { class: 'form-control',
                                                            value: (composer.object.other_affiliation.first || '') } %>
      </div>

      <% if @form.composers.count > 1 %>
      <span class="input-group-btn field-controls multi_value">
        <button type="button" class="btn btn-link remove remove-composer" data-index="<%= composer.index %>">
          <span class="glyphicon glyphicon-remove"></span> <span class="controls-remove-text">Remove Composer</span>
        </button>
      </span>
      <% end %>
    </div>
  <% end %>

  <input type='hidden' name='index-composer' id='index-composer' value="<%= @form.composers.count %>" />

  <div class="composer row cloning hidden" id='composer-cloning_row'>
    <%= f.fields_for :composers do |composer| %>
      <% if composer.index <= @form.composers.count %>
        <div class="composer row">
          <div class="col-sm-6 composer-name">
            <%= composer.input :name, label: "Composer",
                              input_html: { placeholder: 'Last Name, First Name',
                                            class: 'form-control composer composer-name',
                                            value: '' } %>
          </div>

          <div class="col-sm-6 composer-orcid">
            <%= composer.input :orcid, label: 'ORCID', input_html: { placeholder: 'https://orcid.org/xxxx-xxxx-xxxx-xxxx',
                                                                    class: 'form-control',
                                                                    value: '' } %>
          </div>

          <div class="col-sm-6 composer-affiliation">
            <%= composer.input :affiliation, as: :select,
                              collection: DepartmentsService.select_all_options.sort,
                              include_blank: true,
                              selected: '',
                              item_helper: DepartmentsService.method(:include_current_value),
                              input_html: { class: 'form-control' }
            -%>
          </div>

          <div class="col-sm-6 composer-other-affiliation">
            <%= composer.input :other_affiliation, input_html: { class: 'form-control',
                                                                value: '' } %>
          </div>

          <span class="input-group-btn field-controls multi_value">
          <button type="button" class="btn btn-link remove remove-composer" data-index="1">
            <span class="glyphicon glyphicon-remove"></span> <span class="controls-remove-text">Remove Composer</span>
          </button>
        </span>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
<div class="row">
  <button id="add-another-composer" class="btn btn-link add">
    <span class="glyphicon glyphicon-plus"></span>
    <span>Add another Composer</span>
  </button>
</div>
<hr>
