<hr>
<div id="funder">
  <%= f.fields_for :funders do |funder| %>
    <div class="funder row">
      <div class="col-sm-6 funder-name">
        <%= funder.input :name, label: "Funder",
                          input_html: { placeholder: 'Last Name, First Name',
                                        class: 'form-control funder funder-name',
                                        value: (funder.object.name.first || '') } %>
      </div>

      <div class="col-sm-6 funder-orcid">
        <%= funder.input :orcid, label: 'ORCID', input_html: { placeholder: 'https://orcid.org/xxxx-xxxx-xxxx-xxxx',
                                                                class: 'form-control',
                                                                value: (funder.object.orcid.first || '') } %>
      </div>

      <div class="col-sm-6 funder-affiliation">
        <%= funder.input :affiliation, as: :select,
                          collection: DepartmentsService.select_all_options.sort,
                          include_blank: true,
                          selected: funder.object.affiliation.first,
                          item_helper: DepartmentsService.method(:include_current_value),
                          input_html: { class: 'form-control' }
        -%>
      </div>

      <div class="col-sm-6 funder-other-affiliation">
        <%= funder.input :other_affiliation, input_html: { class: 'form-control',
                                                            value: (funder.object.other_affiliation.first || '') } %>
      </div>

      <% if @form.funders.count > 1 %>
      <span class="input-group-btn field-controls multi_value">
        <button type="button" class="btn btn-link remove remove-funder" data-index="<%= funder.index %>">
          <span class="glyphicon glyphicon-remove"></span> <span class="controls-remove-text">Remove Funder</span>
        </button>
      </span>
      <% end %>
    </div>
  <% end %>

  <input type='hidden' name='index-funder' id='index-funder' value="<%= @form.funders.count %>" />

  <div class="funder row cloning hidden" id='funder-cloning_row'>
    <%= f.fields_for :funders do |funder| %>
      <% if funder.index <= @form.funders.count %>
        <div class="funder row">
          <div class="col-sm-6 funder-name">
            <%= funder.input :name, label: "Funder",
                              input_html: { placeholder: 'Last Name, First Name',
                                            class: 'form-control funder funder-name',
                                            value: '' } %>
          </div>

          <div class="col-sm-6 funder-orcid">
            <%= funder.input :orcid, label: 'ORCID', input_html: { placeholder: 'https://orcid.org/xxxx-xxxx-xxxx-xxxx',
                                                                    class: 'form-control',
                                                                    value: '' } %>
          </div>

          <div class="col-sm-6 funder-affiliation">
            <%= funder.input :affiliation, as: :select,
                              collection: DepartmentsService.select_all_options.sort,
                              include_blank: true,
                              selected: '',
                              item_helper: DepartmentsService.method(:include_current_value),
                              input_html: { class: 'form-control' }
            -%>
          </div>

          <div class="col-sm-6 funder-other-affiliation">
            <%= funder.input :other_affiliation, input_html: { class: 'form-control',
                                                                value: '' } %>
          </div>

          <span class="input-group-btn field-controls multi_value">
          <button type="button" class="btn btn-link remove remove-funder" data-index="1">
            <span class="glyphicon glyphicon-remove"></span> <span class="controls-remove-text">Remove Funder</span>
          </button>
        </span>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
<div class="row">
  <button id="add-another-funder" class="btn btn-link add">
    <span class="glyphicon glyphicon-plus"></span>
    <span>Add another Funder</span>
  </button>
</div>
<hr>
