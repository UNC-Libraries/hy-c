<div class="row">
  <div class="col-xs-12 main-header">
    <h1><span class="fa fa-edit"></span> New User</h1>
  </div>
</div>

<div class="panel panel-default">
  <div class="panel-body">
    <%= simple_form_for :account, url: accounts_create_path, method: :post do |f| %>
      <div class="form-group">
        <%= f.label :onyen %>
        <%= f.text_field :onyen, input_html: { class: 'form-control' } %>
      </div>

      <div class="actions pull-right">
        <%= f.submit 'Save', class: 'btn btn-primary' %>
        <%= link_to 'Cancel', hyrax.admin_users_path, class: 'btn btn-default' %>
      </div>
    <% end %>
  </div>
</div>
