<p id="notice"><%= notice %></p>
<div class="row">
  <div class="col-12 main-header">
    <h1><span class="fa fa-archive"></span> Admin Set Worktype</h1>
  </div>
</div>

<% if @default_admin_sets.nil? %>

<div class="card card-default">
  <div class="card-body">
    <p>You must create an admin set before selecting a default.</p>
  </div>
</div>

<% else %>

<div class="row mb-2 pl-2">
  <div class="col-12">
    <h4>A listing of the admin sets chosen for each work type or work type-department combination.</h4>

    <div class="float-right">
      <a href="<%= new_default_admin_set_path %>" class="btn btn-primary">
        <span class="fa fa-edit"></span> Add new admin set worktype
      </a>
    </div>
  </div>
</div>

<div class="card card-default">
  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-striped datatable">
        <caption class="sr-only">admin set worktypes <%= application_name %></caption>
        <thead>
        <tr>
          <th>Work Type</th>
          <th>Department</th>
          <th>Selected Admin Set</th>
          <th></th>
          <th></th>
        </tr>
        </thead>

        <tbody>
        <% @default_admin_sets.each do |default_admin_set| %>
          <tr>
            <td><%= default_admin_set.work_type_name %></td>
            <td><%= default_admin_set.department %></td>
            <td><%= AdminSet.find(default_admin_set.admin_set_id).title.first %></td>
            <td><%= link_to 'Edit', edit_default_admin_set_path(default_admin_set), class:'btn btn-primary' %></td>
            <td><%= link_to 'Delete', default_admin_set, method: :delete, data: { confirm: 'Are you sure?' },
                            class:'btn btn-danger' %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
<% end %>