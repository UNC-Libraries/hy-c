  var pathSegments = window.location.pathname.split('/');
  var concernIndex = pathSegments.indexOf('concern');
  if (concernIndex !== -1) {
    var workIdIndex = pathSegments.findIndex(segment => segment === 'concern') + 2;
    var workId = pathSegments.length > workIdIndex ? pathSegments[workIdIndex].split('?')[0] : 'undefined';
    console.log(workId); // Log the value to the console
    _paq.push(['setCustomDimension', 1, workId]);
  }
  _paq.push(['trackPageView']);
  _paq.push(['enableLinkTracking']);
  (function() {
    var u="https://analytics-qa.lib.unc.edu/";
    _paq.push(['setTrackerUrl', u+'matomo.php']);
    _paq.push(['setSiteId', '5']);
    var d=document, g=d.createElement('script'), s=d.getElementsByTagName('script')[0];
    g.async=true; g.src=u+'matomo.js'; s.parentNode.insertBefore(g,s);
  })();
