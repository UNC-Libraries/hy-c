<script>
  var _paq = window._paq = window._paq || [];

  document.addEventListener('DOMContentLoaded', function() {
    // Extracting the ID of the work from the download button
    if (document.getElementById('file_download')) {
      var workId = document.getElementById('file_download').getAttribute('data-work-id');
      if (workId) {
        var resourceTypeElem = document.querySelector('.attribute-resource_type');
        var collectionElem = document.querySelector('.attribute-title');
        var adminSetElem = document.querySelector('.attribute-admin_set');

        // Checking if resource type, collection or admin set have been assigned to the work
        var resourceType = resourceTypeElem ? resourceTypeElem.textContent.trim() : 'undefined';
        var collection = collectionElem ? collectionElem.textContent.trim() : 'undefined';
        var adminSet = adminSetElem ? adminSetElem.textContent.trim() : 'undefined';
        _paq.push(['setCustomDimension', 1, workId]);
        _paq.push(['setCustomDimension', 2, resourceType]);
        _paq.push(['setCustomDimension', 3, collectionElem]);
        _paq.push(['setCustomDimension', 4, adminSetElem]);
      }
    }
  }, false);

  _paq.push(['trackPageView']);
  _paq.push(['enableLinkTracking']);
  (function() {
    var u="https://analytics-qa.lib.unc.edu/";
    _paq.push(['setTrackerUrl', u+'matomo.php']);
    _paq.push(['setSiteId', '5']);
    var d=document, g=d.createElement('script'), s=d.getElementsByTagName('script')[0];
    g.async=true; g.src=u+'matomo.js'; s.parentNode.insertBefore(g,s);
  })();
</script>