<h1>Editing Work Type</h1>

<%= form_for :work_type, url: main_app.update_work_types_path, html: {method: :patch} do |f| %>

  <table class="table table-striped works-list">
    <caption class="sr-only">Work Types <%= application_name %></caption>
    <thead>
    <tr>
      <th>Work type</th>
      <th>Admin set title</th>
    </tr>
    </thead>

    <tbody>
    <% @work_types.each do |work_type| %>
    <%= fields_for "work_types[]", work_type do |work_type_fields| %>
      <tr>
        <td><%= work_type.work_type_name %></td>
        <%= work_type_fields.hidden_field :work_type_name, text: work_type.work_type_name, readonly: true %>
        <td><%= work_type_fields.select(:admin_set_id, options_for_select(@admin_sets, work_type.admin_set_id)) %></td>
      </tr>
    <% end %>
    <% end %>
    </tbody>
  </table>

  <div class="actions">
    <%= f.submit 'Save', class: 'btn btn-default' %>
  </div>
<% end %>

<%= link_to 'Back', main_app.work_types_path, class: 'btn btn-default' %>
